# --- Database ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=waifuapi
POSTGRES_PORT=5432

# Connection string for Backend (Internal Docker Network)
CONNECTIONStrings__DefaultConnection="Host=db;Database=waifuapi;Username=postgres;Password=postgres"

# --- Backend Settings ---
API_BASE_PATH="/api"

Jwt__Key="your-super-secret-key-that-is-long-enough"
Jwt__Issuer="waifu-api"
Jwt__Audience="waifu-api-users"

Discord__ClientId="your-discord-client-id"
Discord__ClientSecret="your-discord-client-secret"
Discord__RedirectUri="http://localhost:5173/auth/callback"

S3__AccessKey="your-access-key"
S3__SecretKey="your-secret-key"
S3__ServiceUrl="https://s3.fr-par.scw.cloud"
S3__Region="fr-par"
S3__BucketName="waifu-api-images"
S3__ForcePathStyle="false"

Moderation__RequireImageReview=true
Moderation__RequireArtistReview=true
Moderation__RequireTagReview=true

Image__MinWidth=500
Image__MinHeight=500
Image__MaxWidth=8000
Image__MaxHeight=8000
Image__DefaultPageSize=20
Image__MaxPageSize=100

Tag__DefaultPageSize=20
Tag__MaxPageSize=100

Artist__DefaultPageSize=20
Artist__MaxPageSize=100

Album__DefaultPageSize=20
Album__MaxPageSize=100

User__DefaultPageSize=20
User__MaxPageSize=100

Review__DefaultPageSize=30
Review__MaxPageSize=-1

Report__DefaultPageSize=30
Report__MaxPageSize=-1

Frontend__BaseUrl="http://localhost:5173"
Cdn__BaseUrl="https://cdn.waifu.im"

# --- Frontend Settings ---
VITE_API_URL="http://localhost:5000/api"
VITE_DISCORD_CLIENT_ID="your-discord-client-id"
VITE_DISCORD_REDIRECT_URI="http://localhost:5173/auth/callback"

# Frontend Customization
VITE_APP_TITLE="WAIFU.IM"
VITE_DOCS_URL="https://docs.waifu.im"
VITE_CONTACT_EMAIL="contact@waifu.im"
VITE_DISCORD_SERVER_URL="https://discord.gg/Hg8kU9pmx9"
